<%- include ("../templates/encabezado.ejs") %>

<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
    <form action="/login" method="post" style="max-width: 400px; padding: 20px; background: #f4f4f4; border: 1px solid #ccc; border-radius: 5px;">
        <div style="text-align: center; margin-bottom: 20px;">
            <h2>INICIO DE SESION</h2>
        </div>
        <div style="margin-bottom: 20px;">
            <label style="font-weight: bold;">Usuario</label>
            <input type="text" name="usuario" id="usuario" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
        </div>
        <div style="margin-bottom: 20px;">
            <label style="font-weight: bold;">Contraseña</label>
            <input type="password" name="password" id="password" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
        </div>
        <div style="text-align: center;">
            <button type="submit" class="btn btn-primary" style="background-color: #007bff; color: #fff; margin: 0 auto;">Ingresar</button>
        </div>
        <div style="text-align: center; margin-top: 20px;">
            <p>No estás registrado? <a href="/nuevoUsuario">Regístrate</a></p>
        </div>
    </form>
</div>

